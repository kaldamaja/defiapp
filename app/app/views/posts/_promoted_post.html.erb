          <% @promoted_post.each do |post| %>
              <%= link_to (post), style: "text-decoration:none;color:#333;" do %>
                <div class="side-menu-post" style="display:flex;margin-bottom:20px;">
                  <% if post.image.attached? %>
                    <%= image_tag post.image, class: "side-menu-post-image", style: "border-radius:50%;" %>
                  <% end %>
                  <div class="side-menu-post-text" style="display:block;padding-left:10px;">

                        <h6 style="font-weight:700;line-height: 65px;margin-bottom:0px;"><%= post.title %></h6>
                        

                  </div>

                </div>
              <% end %>
          <% end %>
